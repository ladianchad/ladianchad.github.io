\ProvidesPackage{CVSection}
\usepackage{enumitem}
\usepackage{titlesec}   
\usepackage{xparse}

\titleformat{\section}
  {\color{section_color}\normalfont\Large\bfseries}
  {}{0em}{}[\titlerule]

\newcommand{\CVSectionHeader}[1]{
  \section*{#1}
}

\NewDocumentCommand{\CVSectionListBegin}{O{8pt} O{2pt}}{
  \begin{itemize}[
    leftmargin=#1,
    rightmargin=#1,
    itemsep=#2,
    topsep=0pt,
    parsep=0pt,
    partopsep=0pt               
  ]
}

\newcommand{\CVSectionListEnd}{
  \end{itemize}
}

\newcommand{\CVSectionListItem}[1]{
  \item #1
}