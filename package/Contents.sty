\NewDocumentCommand{\TitleWithSide}{m m O{0.85}}{
  \noindent
  \parbox[t]{\linewidth}{
    \parbox[t]{#3\linewidth}{#1} \hfill
    \makebox[0pt][r]{\small{#2}}
  }
}

\NewDocumentCommand{\TitleWithPeriod} {m m o O{0.85}} {
  \TitleWithSide{#1}{\textbf{#2 \IfValueT{#3}{-- #3}}}[#4]
}

\newcommand{\Center}[1]{
  \begin{center}
    #1
  \end{center}
}

\NewDocumentCommand{\LeftImage} {m m o o} {
  \begin{minipage}{#2\textwidth}
    \vspace{-10pt}
    \includegraphics[width=\linewidth]{#1}
    \IfValueT{#3}{\captionof{figure}*{#3}}
    \IfValueT{#4}{\label{#4}}
    \vspace{-10pt}
  \end{minipage}
}