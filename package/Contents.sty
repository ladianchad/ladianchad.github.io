\usepackage{xparse}
\usepackage{graphicx}
\usepackage{wrapfig}
\usepackage{caption}

\NewDocumentCommand{\TitleWithSide}{m m O{0.765}}{
  \SplittedText{#1}{\raggedleft\small{#2}}[#3]
}

\NewDocumentCommand{\SplittedText}{m m O{0.5}}{
  \noindent
  \parbox[t]{\linewidth}{
    \setlength{\parskip}{0pt}
    {\setlength{\parskip}{0pt}
    \parbox[t]{#3\linewidth}{#1}}
    {\setlength{\parskip}{0pt}
    \parbox[t]{\dimexpr\linewidth-#3\linewidth\relax}{#2}}
  }
}

\NewDocumentCommand{\TitleWithPeriod} {m m o O{0.75}} {
  \TitleWithSide{#1}{\textbf{#2 \IfValueT{#3}{-- #3}}}[#4]
}

\NewDocumentCommand{\TitleWithPeriodAndSub} {m m m o O{0.75}} {
  \TitleWithSide{#1}{
    \textbf{#3 \IfValueT{#4}{-- #4}} \\[0.2em]
    \small{#2}
  }
}

\newcommand{\Center}[1]{
  \begin{center}
    #1
  \end{center}
}

\NewDocumentCommand{\LeftImage} {m m o o} {
  \begin{minipage}{#2\textwidth}
    \vspace{-10pt}
    \includegraphics[width=\linewidth]{#1}
    \IfValueT{#3}{\captionof{figure}*{#3}}
    \IfValueT{#4}{\label{#4}}
    \vspace{-10pt}
  \end{minipage}
}