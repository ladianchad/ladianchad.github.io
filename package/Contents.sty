\ProvidesPackage{Contents}
\usepackage{xparse}
\usepackage{graphicx}
\usepackage{wrapfig}
\usepackage{caption}

\NewDocumentCommand{\TitleWithSide}{m m}{
  #1 \hfill \small{#2}
}

\NewDocumentCommand{\TitleWithPeriod} {m m o} {
  \TitleWithSide{#1}{\textbf{#2 \IfValueT{#3}{-- #3}}}
}

\newcommand{\Center}[1]{
  \begin{center}
    #1
  \end{center}
}

\NewDocumentCommand{\LeftImage} {m m o o} {
  \begin{minipage}{#2\textwidth}
    \vspace{-10pt}
    \includegraphics[width=\linewidth]{#1}
    \IfValueT{#3}{\captionof{figure}*{#3}}
    \IfValueT{#4}{\label{#4}}
    \vspace{-10pt}
  \end{minipage}
}